<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 class="col-sm-12" id="createTitle">
            Add new comment to <%= campground.name %>
        </h1>
        <div class="centerForm">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="text"
                        placeholder="Add your comment here"></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="Submit" value="Add comment">
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-primary btn-block">Cancel</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>