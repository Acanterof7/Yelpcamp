<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 class="col-sm-12" id="createTitle">
            Edit camp: <%= campground.name %>
        </h1>
        <div class="centerForm">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Camp name"
                        value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imageUrl" placeholder="Image URL"
                        value="<%= campground.imageUrl %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="description" placeholder="Add a description">
                        <%= campground.description %>
                    </textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" step='0.01' placeholder="Price" ,
                        value="<%= campground.price %> ">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="Submit" value="Edit campground">
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %> " class="btn btn-outline-primary btn-block">Go back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>