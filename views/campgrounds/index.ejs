<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp</h1>
        <p>View our handpicked campsgrounds from all over the world</p>
        <div>
            <a href="/campgrounds/new" class="btn btn-dark btn-lg">Create a new campground</a>
            <a href="/" class="btn btn-dark btn-lg">Homepage</a>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular sites</h3>
        </div>
        <% campgrounds.forEach(element => { %>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card">
                <img class="card-img-top" src="<%= element.imageUrl%>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><%= element.name %> </h5>
                    <p class="card-text"> <%= element.description.substring(0,25) %>...</p>
                    <a href="/campgrounds/<%= element._id %>" class="btn btn-primary">More info</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>



</div>

<%- include("../partials/footer") %>